</head>
<body>    
    <script src="~/LayUI/layuiAdmin/layuiadmin/layui/layui.js"></script>
    <script>
        layui.config({
            base: '/LayUI/layuiadmin/layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
        }).use(['index', 'user', 'layer'], function () {
            var $ = layui.$
                , setter = layui.setter
                , admin = layui.admin
                , form = layui.form
                , router = layui.router()
                , layer = layui.layer
                , search = router.search;

            //页面一打开就执行弹层
            layer.ready(function () {
                $.ajax({
                    url: "@Html.Raw(ViewContext.HttpContext.Request.GetAbsoluteUri())",
                    type: "get",
                    dataType: "json",
                    success: function (d) {
                        layer.msg('很高兴一开场就见到你', function () {
                            //alert("abcde");
                        });
                    }
                })
            });
        });
    </script>
</body>
</html>