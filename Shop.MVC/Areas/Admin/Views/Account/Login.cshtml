              <li data-theme="#20222A" style="background-color: #20222A;"></li>
            </ul>
          </script>
        </div>-->

    </div>

    <script src="~/LayUI/layuiAdmin/layuiadmin/layui/layui.js"></script>
    <script>
        layui.config({
            base: '/LayUI/layuiadmin/layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
        }).use(['index', 'user'], function () {
            var $ = layui.$
                , setter = layui.setter
                , admin = layui.admin
                , form = layui.form
                , router = layui.router()
                , search = router.search;

            form.render();

            //提交
            form.on('submit(LAY-user-login-submit)', function (obj) {
                obj.field.ReturnUrl = '@ViewContext.HttpContext.Request.Query["ReturnUrl"]';

                //请求登入接口
                admin.req({
                    url: "@Url.Action()" //实际使用请改成服务端真实接口
                    , type:"post"
                    , data: obj.field
                    , done: function (res) {
                        console.log(res);


                        //登入成功的提示与跳转
                        layer.msg(res.msg, {
                            offset: '15px'
                            , icon: 1
                            , time: 1000
                        }, function () {
                            if (res.returnUrl != null) {
                                    location.href = res.returnUrl;                                    
                                } else {
                                    location.href = "/Admin/";
                                }
                        });
                    }
                });

            });
        });
    </script>
</body>
</html>